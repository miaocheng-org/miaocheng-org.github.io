---
import Base from "../layouts/Base.astro";
import author from "../data/author.json";
---

<Base title={`Experience - ${author.name}`}>
  <section class="py-16">
    <h1 class="text-4xl font-bold text-[var(--text-primary)] mb-2">
      Experience
    </h1>
    <p class="text-[var(--text-secondary)] mb-12">
      My academic and professional journey
    </p>

    <!-- Experience Timeline -->
    <div class="mb-16">
      <h2 class="text-2xl font-bold text-[var(--text-primary)] mb-8">
        Work Experience
      </h2>
      <div class="space-y-8">
        {
          author.experience.map((exp, index) => (
            <div class="relative pl-8 border-l-2 border-[var(--border-color)]">
              <div class="absolute -left-2 top-0 w-4 h-4 rounded-full bg-[var(--color-primary-500)]" />
              <div class="card">
                <div class="flex flex-wrap items-baseline gap-2 mb-2">
                  <h3 class="text-lg font-semibold text-[var(--text-primary)]">
                    {exp.role}
                  </h3>
                  <span class="text-sm text-[var(--text-secondary)]">
                    @ {exp.organization}
                  </span>
                </div>
                <p class="text-sm text-[var(--color-primary-600)] dark:text-[var(--color-primary-400)] mb-3">
                  {exp.start} - {exp.end || "Present"}
                </p>
                {exp.summary && (
                  <p class="text-[var(--text-secondary)]">{exp.summary}</p>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Education Timeline -->
    <div class="mb-16">
      <h2 class="text-2xl font-bold text-[var(--text-primary)] mb-8">
        Education
      </h2>
      <div class="space-y-8">
        {
          author.education.map((edu: any) => (
            <div class="relative pl-8 border-l-2 border-[var(--border-color)]">
              <div class="absolute -left-2 top-0 w-4 h-4 rounded-full bg-[var(--color-primary-500)]" />
              <div class="card">
                <h3 class="text-lg font-semibold text-[var(--text-primary)] mb-1">
                  {edu.degree}
                </h3>
                <p class="text-[var(--text-secondary)] mb-2">
                  {edu.institution}
                </p>
                <p class="text-sm text-[var(--color-primary-600)] dark:text-[var(--color-primary-400)] mb-3">
                  {edu.start ? `${edu.start} - ` : ""}
                  {edu.end || ""}
                </p>{" "}
                {edu.summary && (
                  <p class="text-sm text-[var(--text-secondary)]">
                    {edu.summary}
                  </p>
                )}
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Skills -->
    {
      (author as any).skills && (author as any).skills.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold text-[var(--text-primary)] mb-8">
            Skills
          </h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {(author as any).skills.map((skill: any) => (
              <div class="card">
                <div class="flex items-center justify-between mb-2">
                  <span class="font-medium text-[var(--text-primary)]">
                    {skill.name}
                  </span>
                  <span class="text-sm text-[var(--text-secondary)]">
                    {skill.level}/5
                  </span>
                </div>
                <div class="w-full h-2 bg-[var(--border-color)] rounded-full overflow-hidden">
                  <div
                    class="h-full bg-[var(--color-primary-500)] rounded-full transition-all"
                    style={`width: ${(skill.level / 5) * 100}%`}
                  />
                </div>
              </div>
            ))}
          </div>
        </div>
      )
    }

    <!-- Download CV Button -->
    <div class="mt-16 text-center">
      <a
        href="/resume.pdf"
        class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-[var(--color-primary-600)] text-white font-medium hover:bg-[var(--color-primary-700)] transition-colors no-underline"
      >
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
          ></path>
        </svg>
        Download CV
      </a>
    </div>
  </section>
</Base>
